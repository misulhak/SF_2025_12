package org.zerock.controller;

import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.zerock.service.TodoService;

import lombok.RequiredArgsConstructor;
import lombok.extern.log4j.Log4j2;

@Controller
@RequestMapping("/todo")
@RequiredArgsConstructor
@Log4j2
public class TodoController {
	
	
	private final TodoService service;
	
	@GetMapping("/list")
	public void list(Model model) {
		log.info("list 요청 처리...");
		
		List<SimpleTodo> todoList = service.findAllTodos();

		model.addAttribute("todoList", todoList);
		
	}
	
	@GetMapping("/register")
	public void registerGet() {
		log.info("register get: 새 항목 등록 폼 요청");
	}
	
	@PostMapping("/register")
	public String registerPost(SimpleTodo dto) {
		log.info("register post: " + dto);
		
		service.insert(dto);
		
		return "redirect:/todo/list";
		
	}
	
	@GetMapping("/read/{id}")
	public String read(@PathVariable("id") int id,
			Model model) {
		
		SimpleTodo todo = service.getTodoById(id);
		model.addAttribute("todo", todo);
		
		return "/todo/read";
	}
	
    // 수정 처리
	@PostMapping("/modify")
	public String modifyPost(SimpleTodo dto) {
		service.update(dto);
		return "redirect:/todo/list";
	}
	
    // 삭제 처리
	@PostMapping("/delete")
	public String deletePost(@RequestParam("id") int id) {
		service.delete(id);
		return "redirect:/todo/list";
	}

}