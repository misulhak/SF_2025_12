<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.TodoMapper">

   <insert id="insert" 
         useGeneratedKeys="true" keyProperty="id">
      insert into simple_todo (name, password, email)
      values ( #{name}, #{password}, #{email} )
   </insert>
   
   <select id="getList" resultType="org.zerock.dto.TodoDTO">
     select * from tbl_member
     order by mno desc
   </select>
   
   <select id="todoById" resultType="org.zerock.dto.TodoDTO">
     select *
     from tbl_member
     where mno = ${mno}
   </select>
   
   <update id="update">
     update tbl_member
     set name = #{name}, password=#{password}, 
         email = #{email}, updatedate=now()
     where mno = #{mno}
   </update>
   
   <delete id="delete">
     delete from simple_todo where mno = #{mno}
   </delete>
</mapper>